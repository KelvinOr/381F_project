<!DOCTYPE html>
<html>
    <head>
        <title>Sign Up</title>
    </head>
    <body>
        <div id="center">
            <h1>Sign Up</h1>
            <form action='/api/createUser' method="post" id='signForm'>
                <input type="text" name="userName" id='usN' placeholder="Username" required><br><br>
                <input type="password" name="password" id='pw' placeholder="Password" required><br><br>
                <input type="password" id='cpw' placeholder="Confirm Password" required><br><br>
            </form>
            <button onclick="check()">Sign Up</button>
        </div>
        <script>
            function check(){
                var pw = document.getElementById("pw").value;
                var confirm_pw = document.getElementById("cpw").value;
                var usN = document.getElementById("usN").value;
                if (pw == "" || confirm_pw == "" || usN == ""){
                    alert("Please fill in all fields");
                    return false;
                } else if ( confirm_pw != pw){
                    alert("Passwords do not match");
                    return false;
                } else {
                    document.getElementById('signForm').submit();
                    return true;
                }
            }
        </script>
        <style>
            body{
                display: flex;
                justify-content: center; 
                align-items: center;
            }
            .center{
                width: 80%;
            }
            button{
                background-color: #2a6dd1;
                border: none;
                font-size: 15px;
                font-family: "Roboto", sans-serif;
                color: white;
                border-radius: 3px;
                padding: 3% 2% 3% 2% ;
                width: 100%;
                box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
            }   
            input{
                outline-style: none;
                border: 0px;
                padding: 3% 2% 3% 2% ;
                background: #F3F3F3;
                box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
                border-radius: 3px;
                font-family: "Roboto", sans-serif;
                width: 100%;
                font-size: 15px;
            }
            button:active{
                background-color: #999999;
            }
        </style>
    </body>
</html>