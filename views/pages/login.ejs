<!DOCTYPE html>
<html>
    <head>
        <title>Login</title>
    </head>
    <body>
        <div id=".center">
            <h1>Login</h1>
            <form action="/api/login" method="get" id='loginForm'>
                <input name="userName" value="haha" id='usN' required/><br><br>
                <input name="password" value="haha" id='pw' required/><br><br>
            </form>
            <button onclick="check()">Login</button>
        </div>
        <script>
            function check(){
                var pw = document.getElementById("pw").value;
                var usN = document.getElementById("usN").value;
                if (pw == "" || usN == ""){
                    alert("Please fill in all the fields");
                }
                else{
                    document.getElementById("loginForm").submit();
                }
            }

        </script>
        <style>
            body{
                display: flex;
                justify-content: center; 
                align-items: center;
            }
            .center{
                width: 80%;
            }
            button{
                background-color: #2a6dd1;
                border: none;
                font-size: 15px;
                font-family: "Roboto", sans-serif;
                color: white;
                border-radius: 3px;
                padding: 3% 2% 3% 2% ;
                width: 100%;
                box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
            }   
            input{
                outline-style: none;
                border: 0px;
                padding: 3% 2% 3% 2% ;
                background: #F3F3F3;
                box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
                border-radius: 3px;
                font-family: "Roboto", sans-serif;
                width: 100%;
                font-size: 15px;
            }
            button:active{
                background-color: #999999;
            }
        </style>
    </body>
</html>